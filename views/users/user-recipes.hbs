<h1 class="mt-10">My Recipes</h1>
<div class="container"><h4 class="intro">Here you can find the recipes you created.</h4></div>

<div class="container">

    <div class="recipe-body">
        <div class="card-grid">

            {{#each recipes}}
            <div class="card">
                {{#if this.recipe.imageUrl}}
                <img src={{this.recipe.imageUrl}} class="card-img-top" alt={{this.label}} />
                {{/if}}
                <div class="card-body">
                    <h5 class="card-title">{{this.recipe.label}}</h5>
                    <p class="card-text"> {{this.recipe.description}}</p>
                </div>
                <div class="card-links">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a href="/community-recipes/{{this._id}}" type="button"
                                class="btn btn-sm btn-outline-secondary"><i class="bi-eye-fill"
                                    style="font-size: 1rem; color: rgb(86, 129, 81);"></i> View</a>
                            <a href="/community-recipes/{{this._id}}/edit" type="button"
                                class="btn btn-sm btn-outline-secondary"><i class="bi-pencil-fill"
                                    style="font-size: 1rem; color: rgb(86, 129, 81);"></i> Edit</a>
                            <button type="submit" class="btn btn-sm btn-outline-dark delete-recipe-button"><i
                                    class="bi-trash-fill" style="font-size: 1rem; color: rgb(180, 85, 72);"></i> Delete<span
                                    hidden>{{this._id}}</span></button>
                        </div>
                        <div>

                        </div>
                    </div>
