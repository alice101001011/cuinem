<div class="container">
<h1>Welcome back! This is your user profile</h2>
<div>
    <h2>Create a new recipe</h2>
    <p>Click the button and create a new recipe</p>
<a href="/recipes/create" type="button" class="btn btn-sm btn-outline-dark">Create new Recipe</a>

</div>

<hr>

<h2>Your recipes</h2>

<div class="rooms-body">
<div class="card-grid">

  {{#each recipes}}
    <div class="card">
      <img src={{this.imageUrl}} class="card-img-top" alt={{this.name}} />
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <p class="card-text"> {{this.description}}</p>
      </div>
      <div class="card-links">
          <div>
        <a href="/rooms/{{this._id}}/edit" type="button" class="btn btn-sm btn-outline-dark">Edit recipe</a>
        </div>
        <div>
        <form action="/rooms/{{this._id}}/delete" method="POST">
          <button class="btn btn-sm btn-outline-dark">Delete recipe</button>
        </form>
        </div>
      </div>
    </div>
  {{/each}}
  
</div>
</div>
</div>