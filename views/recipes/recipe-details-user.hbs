<div class="container single-recipe">
<div class="container recipe-header">
  <div class="row flex-lg-row align-items-center">
    <div class="col-md-6 overflow-hidden recipe-image-container">
      <img src="{{recipe.recipe.imageUrl}}" class="recipe-image" alt="{{recipe.recipe.label}}" loading="lazy">
    </div>
    <div class="col-md-6 recipe-info">
      <h1 class="display-3 fw-bold lh-1 mb-3">{{recipe.recipe.label}}</h1>
      <p class="lead">{{recipe.recipe.description}}</p>
      <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <small>Cuisine:</small>
        <h6>{{recipe.recipe.cuisineType}}</h6>
        <small>Meal type:</small>
        <h6>{{recipe.recipe.mealType}}</h6>
        <small>Dish type:</small>
        <h6>{{recipe.recipe.dishType}}</h6>
      </div>
      {{#if isLoggedIn}}
      <form action="/community-recipes/{{recipe._id}}/save-favorite" method="POST">
        <button class="btn btn-sm btn-outline-dark"><i class="bi-bookmark-heart-fill" style="font-size: 1rem; color: red;"></i>
          {{favoritesCount}}</button>
      </form>
      
      {{/if}}
    </div>
  </div>
</div>

<div class="container">

  <div class="container ">
    <div class="row justify-content-center gap-5">
      <div class="col-6 col-sm-3 ingredients-list">
        <h3 class="yeseva">Ingredients</h3>
        <ul class="list-group-flush">

          {{#each recipe.recipe.ingredients}}
          <li class="list-group-item">{{this.quantity}} {{this.measure}} {{this.food}}</li>

          {{/each}}
        </ul>
      </div>
      <div class="col-6 col-sm-3">
        <h3 class="yeseva">Instructions</h3>
        <p>{{recipe.recipe.instructions}}</p>
      </div>
    </div>
  </div>




  <div class="row justify-content-center">
    <div class="col-md-9">






      <hr>

      <h3>Reviews: </h3>

      <ul class="list-group list-group-flush">
        {{#each recipe.reviews}}
        <li class="list-group-item">
          <p>{{this.comment}}</p>
          <p>{{this.user.username}}</p>

        </li>

        {{/each}}
      </ul>

