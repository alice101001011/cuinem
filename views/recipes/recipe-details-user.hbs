{{!-- {{#if recipeData}} --}}
<h1> {{recipe.recipe.label}}</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-9">
      <h3>Cuisine type:</h3>
      <p>{{recipe.recipe.cuisineType}}</p>
      <h3>Meal type:</h3>
      <p>{{recipe.recipe.mealType}}</p>
      <h3>Dish type:</h3>
      <p>{{recipe.recipe.dishType}}</p>
      <h3>Description: </h3>
      <p>{{recipe.recipe.description}}</p>
      <h3>Ingredients: </h3>
      <p>{{recipe.recipe.ingredientLines}}</p>
      <ul>
        {{#each recipe.recipe.ingredients}}
        <li>{{this.text}}</li>
        {{/each}}
      </ul>
      <img src="{{recipe.recipe.imageUrl}}" alt="" />
      {{!-- <p>Source: </p>
      <a href="{{recipe.recipe.url}}" target="_blank">View full recipe on original site</a> --}}
      <form action="/recipes/user-recipes/{{recipe._id}}/save-favorite" method="POST">
        <button class="btn btn-sm btn-outline-dark">Save recipe to favorites</button>
      </form>
      <hr>


      <h3>Reviews: </h3>

      <ul class="list-group list-group-flush">
        {{#each recipe.reviews}}
        <li class="list-group-item">
          <p>{{this.comment}}</p>
          <p>{{this.user.username}}</p>

          {{#if isLoggedIn}}
          <a href="/reviews/{{this._id}}/edit-review" type="button" class="btn btn-sm btn-outline-dark">Edit
            review</a>
          <form action="/reviews/{{this._id}}/delete-review" method="POST">
            <button class="btn btn-sm btn-outline-dark">Delete review</button>
          </form>
        </li>
        {{/if}}
        {{/each}}
      </ul>

      {{!-- {{#unless isOwner}} --}}
      <a href="/reviews/{{recipe._id}}/review" type="button" class="btn btn-sm btn-outline-dark">Create review</a>
      {{!-- {{/unless}} --}}


      <a href="/recipes/user-recipes" class="btn btn-sm btn-outline-dark">Go back to recipes list</a>

    </div>

  </div>
</div>
</div>

{{!-- {{/if}} --}}

