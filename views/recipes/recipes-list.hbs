<div class="container">
  <h1>Recipes List</h1>

  <div class="recipe-body">
    <form action="/recipes/search" method="GET">
      <label>
        Search
        <input type="text" name="q" />
      </label>

      <div class="form-check form-check-inline">
        <input
          class="form-check-input"
          type="radio"
          id="mealType"
          name="mealType"
          value="Breakfast"
        />
        <label class="form-check-label" for="mealType">Breakfast</label>
      </div>
      <div class="form-check form-check-inline">
        <input
          class="form-check-input"
          type="radio"
          id="mealType"
          name="mealType"
          value="Lunch"
        />
        <label class="form-check-label" for="mealType">Lunch</label>
      </div>
      <div class="form-check form-check-inline">
        <input
          class="form-check-input"
          type="radio"
          id="mealType"
          name="mealType"
          value="Dinner"
        />
        <label class="form-check-label" for="mealType">Dinner</label>
      </div>

      <button type="submit">SEARCH</button>
    </form>

    <div>

    </div>

    <div class="card-grid">
      {{#each recipes}}
        <div class="card">
          <img
            src={{this.image}}
            class="card-img-top"
            alt={{this.label}}
          />
          <div class="card-body">
            <h5 class="card-title">{{this.label}}</h5>

            <a
              href="/recipes/{{this.id}}"
              type="button"
              class="btn btn-sm btn-outline-dark recipe-id">
            View Recipe Details </a>

          </div>
        </div>
      {{/each}}
    </div>

    <div class="card-grid">
      {{#each updatedRecipeData}}
        <div class="card">
          <img
            src={{this.recipe.image}}
            class="card-img-top"
            alt={{this.recipe.label}}
          />
          <div class="card-body">
            <h5 class="card-title">{{this.recipe.label}}</h5>

            <a
              href="/recipes/{{this.recipeId}}"
              target="_blank"
              type="button"
              class="btn btn-sm btn-outline-dark recipe-id"
            >View Recipe Details</a>

            {{!-- view recipe url on another tab --}}
            <a
              href="{{this.recipe.url}}"
              target="_blank"
              type="button"
              class="btn btn-sm btn-outline-dark recipe-id"
            >View recipe site</a>
            {{!-- view recipe url on another tab --}}

          </div>
        </div>
      {{/each}}
    </div>
    <a
      href="{{recipeData._links.next.href}}"
      type="button"
      class="btn btn-sm btn-outline-dark"
    >Next page</a>
  </div>
</div>